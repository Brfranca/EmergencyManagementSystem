@model EmergencyManagementSystem.Service.Models.VehicleModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<div class="content-header sty-one">
    <h1 class="text-white">Atualização de Veículo</h1>
</div>
@using (Html.BeginForm())
{
    <div class="content">
        <div class="info-box">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-lg-12 m-b-3">
                                    <h3 class="text-white">Dados do Veículo <span class="pull-right">Id: @Model.Id</span> </h3>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row invoice-info m-b-3">
                                <div class="col-sm-4 invoice-col">
                                    <address>
                                        <strong>@Model.Codename</strong><br>
                                        Cidade: @Model.OperationCity <br>
                                        Tipo: @Model.GetEnumDescription(Model.VehicleType)<br>
                                        Modelo: @Model.VehicleName @Model.Year<br>
                                        Placa: @Model.VehiclePlate<br>
                                    </address>
                                </div>
                                <!-- /.col -->
                            </div>
                            <a href="@Url.Action("Index","Vehicle")">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
