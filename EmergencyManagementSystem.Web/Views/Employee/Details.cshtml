@model EmergencyManagementSystem.Service.Models.EmployeeModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<div class="content-header sty-one">
    <h1 class="text-white">Detalhes</h1>
</div>
@using (Html.BeginForm())
{
    <div class="content">
        <div class="info-box">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-lg-12 m-b-3">
                                    <h3 class="text-white">Dados do Funcionário <span class="pull-right">Id: @Model.Id</span> </h3>
                                </div>
                                <!-- /.col -->
                            </div>
                            <div class="row invoice-info m-b-3">
                                <div class="col-sm-4 invoice-col">
                                    <address>
                                        <strong>@Model.Name</strong><br>
                                        CPF: @Model.CPF<br>
                                        Nasc: @Model.BirthDate.Date<br>
                                        @Model.GetEnumDescription(Model.Company)<br>
                                        @Model.GetEnumDescription(Model.Occupation)
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    <address>
                                        <strong>Endereço/ Contatos</strong><br>
                                        @Model.AddressModel.CEP - @Model.AddressModel.City, @Model.AddressModel.Street @Model.AddressModel.Number<br>
                                        @Model.Email<br>
                                        @Model.Telephone
                                    </address>
                                </div>
                            </div>
                                <a href="@Url.Action("Index","Employee")">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

