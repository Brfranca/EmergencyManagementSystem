@model EmergencyManagementSystem.Service.Models.EmployeeModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<div class="content-header sty-one">
    <h1 class="text-white">Atualização de Veículo</h1>
</div>
@using (Html.BeginForm())
{
    <div class="content">
        <div class="info-box">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-4 col-xs-12">
                                    <h4 class="card-title">Dados do funcionário</h4>
                                    <div id="treeview1" class=""></div>
                                </div>
                            </div>
                            <div class="row">
                                <input type="hidden" asp-for="Vehicle.Id" />
                                <div class="form-group">
                                    <label asp-for="VehicleName">Nome: </label>
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Data de nascimento: </label>
                                    @Html.DisplayFor(model => model.BirthDate)

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">CPF: </label>
                                    @Html.DisplayFor(model => model.CPF)
                                </div>
                                <div class="form-group">
                                    <label for="location1">RG: </label>
                                    @Html.DisplayFor(model => model.RG)
                                </div>
                                <div class="form-group">
                                    <label for="location1">E-mail: </label>
                                    @Html.DisplayFor(model => model.Email)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Telefone: </label>
                                    @Html.DisplayFor(model => model.Telephone)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Profissão: </label>
                                    @Html.DisplayFor(model => model.Occupation)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Registro profissional: </label>
                                    @Html.DisplayFor(model => model.ProfessionalRegistration)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Corporação: </label>
                                    @Html.DisplayFor(model => model.Company)
                                </div>
                            </div>
                            <div class="row">
                                <div class="row">
                                    <div class="col-md-4 col-xs-12">
                                        <h4 class="card-title">Dados do endereço</h4>
                                        <div id="treeview1" class=""></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="location1">CEP: </label>
                                    @Html.DisplayFor(model => model.AddressModel.CEP)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Cidade: </label>
                                    @Html.DisplayFor(model => model.AddressModel.City)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Bairro: </label>
                                    @Html.DisplayFor(model => model.AddressModel.District)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Rua: </label>
                                    @Html.DisplayFor(model => model.AddressModel.Street)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Número: </label>
                                    @Html.DisplayFor(model => model.AddressModel.Number)
                                </div>
                                <div class="form-group">
                                    <label for="location1">Complemento: </label>
                                    @Html.DisplayFor(model => model.AddressModel.Complement)
                                </div><div class="form-group">
                                    <label for="location1">CEP: </label>
                                    @Html.DisplayFor(model => model.AddressModel.Reference)
                                </div>
                            </div>
                            <div class="col-md-3">
                                <a href="@Url.Action("Update", "Vehicle", new { id = Model.Id })" class="btn btn-default">Alterar</a>
                                <a href="@Url.Action("Index","Vehicle")">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

